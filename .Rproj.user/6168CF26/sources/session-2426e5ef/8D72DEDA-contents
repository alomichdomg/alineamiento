###
##################GENOMA ANOTADO. EJERICICIOS###################################
archivo_anotacion <- read.csv("proteins_167_161521.csv")
archivo_anotacion
#2.- GENERAR DOS BASES DE DATOS ADICIONALES 
#para usar el which y seleccionar se pone:
# nombre_archivo_seleccionar [which(nombre_archivo_Seleccionar$columna a seleccionar == "), ]
positivo <- archivo_anotacion[which(archivo_anotacion$Strand == "+"), ]
positivo <- positivo[c(5,7)] #para seleccionar las columnas que pertenecen a esa base de datos 
write.csv(positivo, "base positiva.csv")# para escribir el archivo en csv 
# se pone write.csv (nombre_del_archvio_a_convertir , "como quieres que se llame.csv)

negativo <- archivo_anotacion[which(archivo_anotacion$Strand == "-"), ]
negativo
negativo <- negativo[c(5,7)]
write.csv(negativo, "base negativa.csv")

#3.- Un boxplot en pdf en ggplot de las tamaÃ±os en aa y en nucleotidos
#star/stop nucleotidos 
pdf("RESULTADOS/Boxplot nucelotidos.pdf")
nucleotido <- archivo_anotacion$Stop-archivo_anotacion$Start
boxplot(nucleotido, col = "orange")
dev.off()
#lengh aa
pdf("RESULTADOS/Boxplot aminoacidos.pdf")
amino <- archivo_anotacion$Length
boxplot(amino, col = "purple")
dev.off()

